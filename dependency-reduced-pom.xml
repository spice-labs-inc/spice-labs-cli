<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.spicelabs</groupId>
  <artifactId>spice-labs-cli</artifactId>
  <version>1.0</version>
  <url>https://github.com/spice-labs-inc/spice-labs-cli</url>
  <developers>
    <developer>
      <name>Spice Labs, Inc.</name>
      <organization>Spice Labs, Inc.</organization>
      <organizationUrl>https://github.com/spice-labs-inc</organizationUrl>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/spice-labs-inc/spice-labs-cli.git</connection>
    <developerConnection>scm:git:ssh://github.com/spice-labs-inc/spice-labs-cli.git</developerConnection>
    <url>https://github.com/spice-labs-inc/spice-labs-cli</url>
  </scm>
  <organization>
    <name>Spice Labs, Inc.</name>
    <url>https://github.com/spice-labs-inc</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>fatjar</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>3.5.0</version>
            <executions>
              <execution>
                <id>shade</id>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <finalName>spice-labs-cli-fat</finalName>
                  <transformers>
                    <transformer>
                      <mainClass>io.spicelabs.cli.SpiceLabsCLI</mainClass>
                    </transformer>
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.13.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.13.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-platform-engine</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <ginger.version>1.0</ginger.version>
    <slf4j.version>2.0.17</slf4j.version>
    <picocli.version>4.7.6</picocli.version>
    <mockwebserver.version>4.12.0</mockwebserver.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <logback.version>1.5.18</logback.version>
    <goatrodeo.version>0.7.3-2-8825f62-dirty-SNAPSHOT</goatrodeo.version>
    <maven.compiler.source>21</maven.compiler.source>
    <mockito.version>5.3.1</mockito.version>
    <junit.jupiter.version>5.13.1</junit.jupiter.version>
    <maven.compiler.target>21</maven.compiler.target>
  </properties>
</project>
